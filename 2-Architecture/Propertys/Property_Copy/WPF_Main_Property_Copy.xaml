<Window x:Class="WPFApplication.Property_Copy.WPF_Main_Property_Copy"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPFApplication.Property_Copy"
             mc:Ignorable="d" 
            Topmost="True"

            ResizeMode="NoResize"
            MinHeight="600" MinWidth="900"
            MaxHeight="600" MaxWidth="900"
            d:DesignHeight="600" 
            d:DesignWidth="900"
            WindowStyle="None" Foreground="#FFA3A0A0">
    <Window.Resources>
        <!-- Шаблон для категорий параметров (Тип, Экземпляр) -->
        <HierarchicalDataTemplate DataType="{x:Type local:ParameterCategory}" ItemsSource="{Binding ParametersGroup}">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="{Binding Name}" FontWeight="Bold"/>
            </StackPanel>
        </HierarchicalDataTemplate>
        <!-- Шаблон для категорий параметров (Тип, Экземпляр) -->
        <HierarchicalDataTemplate DataType="{x:Type local:ParameterGroup}" ItemsSource="{Binding Parameters}">
            <StackPanel Orientation="Horizontal">
                <CheckBox IsChecked="{Binding IsCheckedGroup}" Margin="5,0,0,0"/>
                <TextBlock Text="{Binding Name}" Margin="5,0,0,0"/>
            </StackPanel>
        </HierarchicalDataTemplate>

        <!-- Шаблон для параметров с чекбоксом -->
        <DataTemplate DataType="{x:Type local:ParameterItem}">
            <StackPanel Orientation="Horizontal">
                <CheckBox IsChecked="{Binding IsChecked}" Margin="5,0,0,0"/>
                <TextBlock Text="{Binding DisplayText}" Margin="5,0,0,0"/>
            </StackPanel>
        </DataTemplate>
    </Window.Resources>
    <Grid>
        <DockPanel Margin="0,0,0,0">
            <StackPanel Orientation="Horizontal" 
             WindowChrome.IsHitTestVisibleInChrome="True" 
             DockPanel.Dock="Right"  
             Height="30" 
             FlowDirection="RightToLeft" 
             VerticalAlignment="Top"
             Background="Gray" 
             HorizontalAlignment="Right"  >
                <Button Name="closeWPF" 
             Height="30" 
             Width="100" 
             HorizontalAlignment="Right" 
             VerticalAlignment="Top" 
             Content="Закрыть"   
             FontFamily="ISOCPEUR"
             Click="close_Click"   
             FontSize="15"
             RenderTransformOrigin="-7.767,0.712" 
             Background="Gray" 
             BorderThickness ="0"/>
            </StackPanel>
            <Border Background="Gray" 
             DockPanel.Dock="Top" 
             Height="30" 
             VerticalAlignment="Top" 
             Margin="0,0,0,0" 
             MouseDown="Label_MouseDown">
                <Image 
             Source="/FerrumAddin;component/Resources/All_Ferrum_Logo.png"
             Width="150"
             HorizontalAlignment="Left"/>
            </Border>
            <Border Background="Gray" 
             DockPanel.Dock="Top" 
             Height="30" 
             VerticalAlignment="Top" 
             Margin="30,-30,0,0" 
             MouseDown="Label_MouseDown">
                <TextBlock 
             TextWrapping="Wrap" 
             Text="Копирование свойств"
             FontSize="20"
             FontFamily="Bahnschrift SemiBold SemiCondensed"
             Height="20" 
             Foreground="#FF323232" 
             FontWeight="Bold"/>
            </Border>
           
        </DockPanel>
        <!--<ComboBox 
             Name="doc_Donor"
             HorizontalAlignment="Left"
             VerticalAlignment="Top"
             Margin="20,40,0,0 "
             Width="420" SelectionChanged="doc_Donor_SelectionChanged"/>
        <ComboBox 
             Name="doc_Target"
             HorizontalAlignment="Left"
             VerticalAlignment="Top"
             Margin="460,40,0,0 "
             Width="420" SelectionChanged="doc_Target_SelectionChanged"/>-->
        <Border Background="Gray" 
         DockPanel.Dock="Top" 
         Height="35"
         VerticalAlignment="Bottom" 
         Margin="0,0,0,0" 
         MouseDown="Label_MouseDown">
            <TextBlock 
         TextWrapping="Wrap" 
         Text="..."
         Margin="0,10"
         Name ="Version"
         FontSize="15"
         FontFamily="ISOCPEUR"
         Height="25" 
         Foreground="#FF323232"/>
        </Border>
        <Button 
         FontSize="15" 
         Content="Запуск"
         Margin="0,0,14,5"
         Width="70"
         ToolTip="Запуск"
         FontFamily="ISOCPEUR"
         HorizontalAlignment="Right"
         VerticalAlignment="Bottom"
         BorderBrush="{x:Null}"
         Click="Start_Cod"/>
        <Button 
         FontSize="15" 
         Content="Выбрать донора"
         Margin="20,50"
         Width="420"
         ToolTip="Выбрать элемент донор в модели"
         FontFamily="ISOCPEUR"
         HorizontalAlignment="Left"
         VerticalAlignment="Top"
         BorderBrush="{x:Null}"
         Click="Select_Element"/>
        <Button 
         FontSize="15" 
         Content="Выбрать цель"
         Margin="0,50,20,0"
         Width="420"
         ToolTip="Выбрать целевые элементы модели"
         FontFamily="ISOCPEUR"
         HorizontalAlignment="Right"
         VerticalAlignment="Top"
         BorderBrush="{x:Null}"
         Click="Select_Target"/>
       
        <TreeView x:Name="Tree_Parameter_On_Select_Element"
          Width="420"
          Height="440"
          BorderBrush="Black"
          Margin="20,100,0,0"
          VerticalAlignment="Top"
          HorizontalAlignment="Left"
          SelectedItemChanged="Tree_Parameter_On_Select_Element_SelectedItemChanged" 
                  ItemsSource="{Binding ParameterCategories}">
        </TreeView>
         
        <Border 
         BorderThickness="1" 
         BorderBrush="Black"
         Margin="0,100,20,50"
         HorizontalAlignment="Right"
         VerticalAlignment="Top"
         Height="440"
         Width="420">
            <ScrollViewer
             x:Name="scroll_Viewer_Work_Set_Ignore"
             VerticalScrollBarVisibility="Visible" 
             HorizontalScrollBarVisibility="Visible"
             VerticalAlignment="Top"
             HorizontalAlignment="Left"
             CanContentScroll="True"
             ToolTip="Список спецификаий из модели"
             FontSize="15"
             Width="420"
             Height="440"
             FontFamily="ISOCPEUR" 
             Margin="0,0,0,0"/>
        </Border>
        <TextBlock FontSize="15" 
         Text="..." 
         Name="Select_Element_Donor"
         Margin="20,80,460,0" 
         VerticalAlignment="Top" 
         FontFamily="ISOCPEUR" 
         Foreground="#FF474747"/>
    </Grid>
</Window>
