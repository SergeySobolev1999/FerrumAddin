<Window x:Class="WPFApplication.Assembling_Project_On_Group_Stained_Glass_Windows.WPF_Main_Assembling_On_Group_Stained_Glass_Windows"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPFApplication.Assembling_Project_On_Group_Stained_Glass_Windows"
             mc:Ignorable="d" 
                     Topmost="True"
        ResizeMode="NoResize"
        MinHeight="700" MinWidth="1000"
        MaxHeight="700" MaxWidth="1000"
        d:DesignHeight="700" 
        d:DesignWidth="700"
WindowStyle="None">
    <WindowChrome.WindowChrome>
        <WindowChrome/>
    </WindowChrome.WindowChrome>
    <Grid>
        <DockPanel Margin="0,0,0,0">
            
            <StackPanel Orientation="Horizontal" 
                   WindowChrome.IsHitTestVisibleInChrome="True" 
                   DockPanel.Dock="Right"  
                   Height="30" 
                   FlowDirection="RightToLeft" 
                   VerticalAlignment="Top"
                   Background="Gray" 
                   HorizontalAlignment="Right"  >
               
                <Button Name="closeWPF" 
                   Height="30" 
                   Width="100" 
                   HorizontalAlignment="Right" 
                   VerticalAlignment="Top" 
                   Content="Закрыть"   
                    FontFamily="ISOCPEUR"
                   Click="close_Click"   
                   FontSize="15"
                   RenderTransformOrigin="-7.767,0.712" 
                   Background="Gray" 
                   BorderThickness ="0"/>
            </StackPanel>
            <Border Background="Gray" 
               DockPanel.Dock="Top" 
               Height="30" 
                    Width="32"
               VerticalAlignment="Top" 
                HorizontalAlignment="Left"
               Margin="0,0,0,0" MouseDown="Label_MouseDown">
                <Image 
                     Margin="0,0,0,0"  
                     HorizontalAlignment="Left"
                        Width="32"
                    Source="/FerrumAddin;component/Resources/All_Ferrum_Logo.png"  
                     Stretch="Fill"/>
            </Border>
            <Border Background="Gray" 
                   DockPanel.Dock="Top" 
                   Height="30" 
                    HorizontalAlignment="Left"
                   VerticalAlignment="Top" 
                   Margin="32,-30,0,0" MouseDown="Label_MouseDown">
                <TextBlock 
                   TextWrapping="Wrap" 
                   Text="ВИТРАЖИ СБОРКА"
                   FontSize="20"
                   FontFamily="Bahnschrift SemiBold SemiCondensed"
                   Height="20" Foreground="#FF323232" FontWeight="Bold"/>

            </Border>
            <Border Background="Gray" 
                    DockPanel.Dock="Top" 
                    Height="30" 
                    VerticalAlignment="Top" 
                    Margin="182,-30,0,0" MouseDown="Label_MouseDown">
                <TextBlock 
                   TextWrapping="Wrap" 
                   Text="..."
                   Name ="Version"
                   Margin="0,0,0,2"
                    
                   HorizontalAlignment="Left"
                   VerticalAlignment="Bottom"
                   FontSize="15"
                   FontFamily="ISOCPEUR"
                   Height="20" 
                   Foreground="#FF323232"/>

            </Border>
        </DockPanel>
        <Line
    X1="5" Y1="695"
    X2="520" Y2="695"
    Stroke="Gray"
    StrokeDashArray="2"
    StrokeThickness="1"  />
        <Line
