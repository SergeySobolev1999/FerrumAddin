        <Line
    X1="910" Y1="645"
    X2="860" Y2="645"
    Stroke="Gray"
    StrokeDashArray="2"
    StrokeThickness="1"  />
        <Line
    X1="995" Y1="645"
    X2="950" Y2="645"
    Stroke="Gray"
    StrokeDashArray="2"
    StrokeThickness="1"  />
        <Line
    X1="995" Y1="645"
    X2="995" Y2="695"
    Stroke="Gray"
    StrokeDashArray="2"
    StrokeThickness="1"  />
        <TextBlock 
    FontSize="15" 
    Text="Виды сборок" 
    Margin="100,635,820,0" 
    VerticalAlignment="Top" 
    FontFamily="ISOCPEUR" 
    Foreground="#FF474747"/>
        <TextBlock 
    FontSize="15" 
    Text="Пуск" 
    Margin="915,635,0,0" 
    VerticalAlignment="Top" 
    FontFamily="ISOCPEUR" 
    Foreground="#FF474747"/>
        <TextBlock 
    FontSize="15" 
    Text="Позиции табилицы" 
    Margin="630,635,250,0" 
    VerticalAlignment="Top" 
    FontFamily="ISOCPEUR" 
    Foreground="#FF474747"/>
        <Button 
     Content="Принять" 
     FontFamily="ISOCPEUR"
     FontSize="15"
     Height="30"
     Margin="865,645,10,0" 
     Click="Add_Collection_Group"/>
        <Button 
     Content="Выбрать все группы" 
     Width="150"
     FontFamily="ISOCPEUR"
     FontSize="15"
     Height="30"
     Margin="220,645,0,0" 
     Click="Select_All"/>
        <Button 
     Content="Отменить выбор групп" 
     Width="150"
     FontFamily="ISOCPEUR"
     FontSize="15"
     Height="30"
     Margin="535,645,0,0" 
     Click="Cancel_Everything"/>
        <CheckBox 
     Content="Вид в плане"
     Name ="HorizontalDetail"
     Width="100"
     Height="15"
     FontFamily="ISOCPEUR"
     FontSize="15"
     HorizontalAlignment="Left"
     Margin="10,665,0,0"/>
        <CheckBox 
      Content="Отметка слева"
        Name ="ElevationLeft"
      Width="130"
      Height="15"
      FontFamily="ISOCPEUR"
      FontSize="15"
      HorizontalAlignment="Left"
      Margin="380,625,0,0"/>
        <CheckBox 
      Content="Отметка справа"
        Name ="ElevationRight"
      Width="130"
      Height="15"
      FontFamily="ISOCPEUR"
      FontSize="15"
      HorizontalAlignment="Left"
      Margin="380,665,0,0"/>
        <CheckBox 
      Content="Отметка спереди"
       Name ="ElevationFront"
      Width="130"
      Height="15"
      FontFamily="ISOCPEUR"
      FontSize="15"
      HorizontalAlignment="Left"
      Margin="200,625,0,0"/>
        <CheckBox 
      Content="Отметка сзади"
      Name ="ElevationBack"
      Width="130"
      Height="15"
      FontFamily="ISOCPEUR"
      FontSize="15"
      HorizontalAlignment="Left"
      Margin="200,665,0,0"/>
        <CheckBox 
        Content="Выбрать все виды"
        Name ="All_View"
        Width="130"
        Height="15"
        FontFamily="ISOCPEUR"
        FontSize="15"
        HorizontalAlignment="Left"
        Margin="10,625,0,0" Checked="All_View_Checked" Click="All_View_Checked"/>
        <DataGrid 
     x:Name="myDataGrid"
     AutoGenerateColumns="False"
     CanUserResizeColumns="True" 
     CanUserAddRows="False"
     ColumnWidth="*"
     Margin="0,30,0,70"
     ItemsSource="{Binding DataItems}">
            <DataGrid.Columns>
                <DataGridTextColumn 
             Header="Марка группы" 
             Width="90"
             IsReadOnly="True"
             FontFamily="ISOCPEUR"
             FontSize="15"
             Binding="{Binding Mark}"  />
                <DataGridTextColumn 
             Header="ID Группы" 
             Width="70"
             IsReadOnly="True"
             FontFamily="ISOCPEUR"
             FontSize="15"
             Binding="{Binding ID_Group}" />
                <DataGridTextColumn 
             Header="Тип группы" 
             Width="*"
             IsReadOnly="True"
             FontFamily="ISOCPEUR"
             FontSize="15"
             Binding="{Binding Type}" />
                <DataGridTextColumn 
             Header="Сборка" 
             Width="80"
             IsReadOnly="True"
             FontFamily="ISOCPEUR"
             FontSize="15"
             Binding="{Binding Assembling}" />
                <DataGridTextColumn 
             Header="ID Сборки" 
             Width="70"
             IsReadOnly="True"
             FontFamily="ISOCPEUR"
             FontSize="15"
             Binding="{Binding ID_Assembling}" />
                <DataGridCheckBoxColumn 
             Header="Обновить" 
             Width="70"
             Binding="{Binding Update}" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
