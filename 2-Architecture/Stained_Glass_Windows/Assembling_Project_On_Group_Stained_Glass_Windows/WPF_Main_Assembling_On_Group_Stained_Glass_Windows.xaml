    StrokeThickness="1"  />
        <Line
    X1="180" Y1="645"
    X2="520" Y2="645"
    Stroke="Gray"
    StrokeDashArray="2"
    StrokeThickness="1"  />
        <Line
    X1="530" Y1="695"
    X2="530" Y2="645"
    Stroke="Gray"
    StrokeDashArray="2"
    StrokeThickness="1"  />
        <Line
    X1="850" Y1="695"
    X2="850" Y2="645"
    Stroke="Gray"
    StrokeDashArray="2"
    StrokeThickness="1"  />
        <Line
    X1="850" Y1="695"
    X2="530" Y2="695"
    Stroke="Gray"
    StrokeDashArray="2"
    StrokeThickness="1"  />
        <Line
    X1="620" Y1="645"
    X2="530" Y2="645"
    Stroke="Gray"
    StrokeDashArray="2"
    StrokeThickness="1"  />
        <Line
    X1="850" Y1="645"
    X2="750" Y2="645"
    Stroke="Gray"
    StrokeDashArray="2"
    StrokeThickness="1"  />
        <Line
    X1="860" Y1="695"
    X2="860" Y2="645"
    Stroke="Gray"
    StrokeDashArray="2"
    StrokeThickness="1"  />
        <Line
    X1="860" Y1="695"
    X2="995" Y2="695"
    Stroke="Gray"
