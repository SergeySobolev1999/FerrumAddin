<Window x:Class="WPFApplication.Worksets.Workset"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFApplication.Worksets"
        mc:Ignorable="d"
        Title="Workset" Height="130" Width="186" ResizeMode="NoResize">
    <Grid>
        <RadioButton Content="Выполнять по виду" x:Name="vid" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" GroupName="1" Checked="RadioButton_Checked" Unchecked="RadioButton_Checked"/>
        <RadioButton Content="Выполнять по модели" HorizontalAlignment="Left" Margin="10,30,0,0" VerticalAlignment="Top" GroupName="1" Checked="RadioButton_Checked" Unchecked="RadioButton_Checked" IsChecked="True"/>
        <Button Content="Выполнить" HorizontalAlignment="Center" Margin="0,66,0,0" VerticalAlignment="Top" Width="166" Click="Button_Click"/>


    </Grid>
</Window>
