<Window x:Class="FerrumAddin.Update"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FerrumAddin"
        mc:Ignorable="d"
        Title="Update" Height="310" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.ColumnSpan="2" FontSize="21" FontWeight="Normal" HorizontalAlignment="Center" TextAlignment="Center" VerticalAlignment="Center">
            Вышла новая версия плагина Железно.<LineBreak/>
            Плагин будет обновлен после закрытия окна Revit.
        </TextBlock>
        <Button Grid.Row="1" Margin="10px" Content="Закрою Revit сам" FontSize="18" Click="Button_Click"/>
        <Button Grid.Row="1" Grid.Column="1" Margin="10px" Content="Обновить плагин сейчас" FontSize="18" Click="Button_Click_1"/>

    </Grid>
</Window>
