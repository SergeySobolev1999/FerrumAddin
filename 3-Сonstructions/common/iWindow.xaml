<Window x:Class="masshtab.iWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:masshtab"
             mc:Ignorable="d" Width="300"
        Topmost="True"
            WindowStartupLocation="CenterScreen" 
            Title="Информация">
    <StackPanel VerticalAlignment="Center" Margin="5">
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <TextBlock Name="text1" Margin="5" Text="" Width="250" TextWrapping="Wrap" />
        </StackPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Content="ОК" x:Name="escButton" IsDefault="True" IsCancel="True" Click="escButton_Click" MinWidth="90" MinHeight="25" Margin="5" />
        </StackPanel>
    </StackPanel>

</Window>
